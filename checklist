<footer class="site-footer"><div class="container footer-inner"><p>© <span id="year"></span> EEOC Explained</p></div></footer>
<script>
  document.getElementById('year').textContent=new Date().getFullYear();
  const KEY='eeoc-checklist-v1', boxes=[...document.querySelectorAll('[data-k]')];
  try{const s=JSON.parse(localStorage.getItem(KEY)||'{}'); boxes.forEach(b=>b.checked=!!s[b.dataset.k]);}catch{}
  document.getElementById('save').onclick=()=>{const s={}; boxes.forEach(b=>s[b.dataset.k]=b.checked); localStorage.setItem(KEY,JSON.stringify(s)); alert('Saved on this device.');};
  document.getElementById('reset').onclick=()=>{localStorage.removeItem(KEY); boxes.forEach(b=>b.checked=false);};
</script>
