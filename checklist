  <script>
    const KEY='eeoc-checklist-v1';
    const boxes=[...document.querySelectorAll('[data-k]')];
    // load
    try{const s=JSON.parse(localStorage.getItem(KEY)||'{}');boxes.forEach(b=>b.checked=!!s[b.dataset.k]);}catch{}
    // save/reset
    document.getElementById('save').onclick=()=>{
      const s={}; boxes.forEach(b=>s[b.dataset.k]=b.checked); localStorage.setItem(KEY,JSON.stringify(s));
      alert('Progress saved on this device.');
    };
    document.getElementById('reset').onclick=()=>{ localStorage.removeItem(KEY); boxes.forEach(b=>b.checked=false); };
    document.getElementById('year').textContent=new Date().getFullYear();
  </script>
<script>
  // highlight the current nav link
  const path = location.pathname.replace(/\/+$/, "");
  document.querySelectorAll(".site-nav a").forEach(a => {
    const href = a.getAttribute("href").replace(/\/+$/, "");
    if (path.endsWith(href)) a.classList.add("active");
  });
</script>
