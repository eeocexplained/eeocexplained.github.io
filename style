    <!-- ✅ EEOC Checklist (saved to the browser so progress sticks) -->
    <section class="card" id="eeoc-checklist">
      <h2>EEOC Complaint Checklist</h2>
      <p class="muted" style="text-align:center;margin-top:6px">
        Use this quick checklist to track your progress. Your selections are saved in your browser.
      </p>

      <ul class="checklist" role="list">
        <li>
          <input type="checkbox" id="step1">
          <label for="step1"><strong>File an EEOC Charge</strong> — Submit your charge online, by mail, or in person at your nearest EEOC office.</label>
        </li>
        <li>
          <input type="checkbox" id="step2">
          <label for="step2"><strong>Provide Supporting Evidence</strong> — Include emails, notes, witness names, or documents to strengthen your claim.</label>
        </li>
        <li>
          <input type="checkbox" id="step3">
          <label for="step3"><strong>Respond to Information Requests</strong> — Watch for EEOC communications and reply promptly to stay on track.</label>
        </li>
        <li>
          <input type="checkbox" id="step4">
          <label for="step4"><strong>Participate in Mediation</strong> — If offered, mediation can resolve your case faster without a full investigation.</label>
        </li>
        <li>
          <input type="checkbox" id="step5">
          <label for="step5"><strong>Investigation</strong> — The EEOC may collect documents, conduct interviews, or visit the workplace.</label>
        </li>
        <li>
          <input type="checkbox" id="step6">
          <label for="step6"><strong>Final Determination</strong> — You’ll receive results or a Notice of Right to Sue, allowing you to pursue your claim in court.</label>
        </li>
      </ul>
    </section>
  </main>

  <footer>© 2025 EEOC Explained — All rights reserved.</footer>

  <script>
    // Persist checklist state in localStorage
    (function () {
      const key = "eeoc-explained-checklist-v1";
      const boxes = Array.from(document.querySelectorAll('#eeoc-checklist input[type="checkbox"]'));
      // Load saved
      try {
        const saved = JSON.parse(localStorage.getItem(key) || "{}");
        boxes.forEach(b => { if (saved[b.id]) b.checked = true; });
      } catch {}
      // Save on change
      boxes.forEach(b => {
        b.addEventListener("change", () => {
          const data = {};
          boxes.forEach(x => data[x.id] = x.checked);
          localStorage.setItem(key, JSON.stringify(data));
        });
      });
    })();
  </script>
