  <main class="container">
    <section class="card">
      <h2>Send a Message</h2>
      <p class="lead">This simple form opens your email app with a pre-filled message.</p>

      <!-- Mailto fallback (no server needed). Replace with your preferred email. -->
      <form onsubmit="sendMailto(event)">
        <div style="display:grid;gap:10px;max-width:560px">
          <input id="name" required placeholder="Your name" style="padding:12px;border-radius:10px;border:1px solid #d8dde5">
          <input id="email" required type="email" placeholder="Your email" style="padding:12px;border-radius:10px;border:1px solid #d8dde5">
          <textarea id="message" required rows="6" placeholder="How can we help?" style="padding:12px;border-radius:10px;border:1px solid #d8dde5"></textarea>
          <button style="padding:12px 16px;border:none;border-radius:10px;background:var(--accent);color:white;font-weight:700;width:fit-content">
            Send Email
          </button>
        </div>
      </form>

      <script>
        function sendMailto(e){
          e.preventDefault();
          const name = encodeURIComponent(document.getElementById('name').value);
          const email = encodeURIComponent(document.getElementById('email').value);
          const msg = encodeURIComponent(document.getElementById('message').value);
          const to = 'eeocexplained@gmail.com'; // ← change if needed
          const subject = encodeURIComponent('Message from EEOC Explained site');
          const body = `Name: ${name}%0AEmail: ${email}%0A%0A${msg}`;
          location.href = `mailto:${to}?subject=${subject}&body=${body}`;
        }
      </script>
    </section>

    <section class="card">
      <h2>Follow Along</h2>
      <p>Videos, guides, and resources will also be linked from our YouTube channel: <strong>@EEOCExplained</strong>.</p>
    </section>
